<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- Mantener nombres de fuentes existentes para que coincidan con los mapeos -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
    <!-- No redefinimos avalonia-nightly aquí; se tomará del config global si existe -->
  </packageSources>
  <packageSourceMapping>
    <!-- Mapear todos los paquetes de este repo a nuget.org para evitar NU1507 -->
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
</configuration>

